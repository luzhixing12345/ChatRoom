.inputBox {
    width: 70%;
    padding: 6rpx 10rpx;
    margin: 4rpx;
    margin-left: 100rpx;
    box-sizing: border-box;
    border: 1rpx solid #555;
    outline: none;
}

.circleImage{
    margin-left: 250rpx;
    margin-top: 100rpx;
    height: 245rpx;
    width: 245rpx;
    border-radius:50%;
}


.userNickname {
    margin-top: 50rpx;
    margin-left: 300rpx;
    font-size: large;
}

.label-list{
    display: flex;
    width: 100%;
    height: 120rpx;
    align-items: center;
    border-bottom: 1rpx solid #e8e8e8;
}
.label-list .label {
    color: #333;
    font-size: 36rpx;
    margin-left: 200rpx;
    font-weight: bold;
}
.input-box{
    position: relative;
    left:20px;
}
.place {
    align-items: center;
    font-size: 36rpx;
    left: 30rpx;
    vertical-align:middle;
}

