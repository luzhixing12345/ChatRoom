.pub-comment {
  background-color: #f3f3f3;
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.pub-left {
  background-color: #fff;
  color: #7f7f7f;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.pub-input {
  padding: 10rpx 20rpx;
  width: 500rpx;
}

.pub-button {
  color: #7f7f7f;
  background-color: #76c4f5;
  border: solid 1rpx #7f7f7f;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.pub-button-with-text {
  color: #fff;
  background-color: #0099ff;
  border: solid 1rpx #7f7f7f;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}

.chat_content {
  margin-bottom: 120rpx;
  width: 100%;
  height: 100vh;
}

.test {
  height: 150rpx;
  background-color: #fff;
}

.top {
  display: flex;
  margin: 20rpx 20rpx 0 20rpx;
  align-items: center;
}

.top-right {
  display: flex;
  margin: 20rpx 20rpx 0rpx 20rpx;
  align-items: center;
  justify-content: flex-end;
}

.face {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 5rpx gray solid;
}

.face-right {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  right: 10rpx;
  flex-shrink: 0;
  border: 5rpx gray solid;
}

.bot {
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 20rpx 20rpx;
  background-color: rgb(229,229,229);
  border-radius: 20rpx;
}

.bot-right {
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 20rpx 20rpx;
  color: #fff;
  background-color: #0099ff;
  border-radius: 20rpx;
}

.nick {
  margin-top: 20rpx;
}

text {
  font-size: 30rpx;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}
